<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="com.mshaw.creditcardappscreen.MainActivity">

    <LinearLayout
        android:id="@+id/subactivityone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/subactivityone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#f9f9f9"
                android:text="Enter Card Balance ($)"
                 />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#f9f9f9"
                android:text="Enter Yearly Interest Rate (%)" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#f9f9f9"
                android:text="Enter Minimum Payment ($)" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#f9f9f9"
                android:text="Final Card Balance ($)" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#f9f9f9"
                android:text="Months Remaining" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#f9f9f9"
                android:text="Interest Paid Will Be ($)" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/subactivitytwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f9f9f9"
                android:layout_margin="5sp"
                android:layout_weight="1"
                 />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f9f9f9"
                android:layout_margin="5sp"
                android:layout_weight="1"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f9f9f9"
                android:layout_weight="1"
                android:layout_margin="5sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f9f9f9"
                android:layout_weight="1"
                android:layout_margin="5sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f9f9f9"
                android:layout_margin="5sp"
                android:layout_weight="1"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f9f9f9"
                android:layout_margin="5sp"
                android:layout_weight="1"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/subactivitytwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="36sp"
            android:orientation="vertical"
            android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="compute"/>
                 <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:text="clear"/>
        </LinearLayout>
</LinearLayout>
